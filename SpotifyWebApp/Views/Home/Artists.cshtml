<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Horizontal List Group</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        ul {
            list-style-type: none; /* Removes bullet points from unordered lists */
        }

        img {
            height: 192px;
            width: 192px;
        }

        .list-group-horizontal-wrap {
            display: flex;
            flex-wrap: wrap;
        }

        .list-group-horizontal-wrap .list-group-item {
            margin-right: 10px; /* Add some space between items if needed */
            margin-bottom: 10px; /* Add some space at the bottom for wrapping */
            border: none; /* Remove border */
            color: inherit; /* Ensure the color is inherited */
            text-decoration: none; /* Remove underline */
        }

        .list-group-horizontal-wrap .list-group-item:hover {
            color: inherit; /* Keep the color the same on hover */
            text-decoration: none; /* Ensure no underline on hover */
        }
        .main-title{
            margin-bottom: 50px;
            margin-top: 20px;
        }

    </style>
</head>
<body>

    @if (ViewBag.Artists != null)
    {
        <div class="container">
            <h2 class="text-center main-title">Top Artists</h2>

            <ul class="nav nav-tabs nav-fill w-100" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="fourweeks-tab" data-bs-toggle="tab" data-bs-target="#fourweeks" type="button" role="tab" aria-controls="fourweeks" aria-selected="true">Last 4 Weeks</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="sixmonth-tab" data-bs-toggle="tab" data-bs-target="#sixmonth" type="button" role="tab" aria-controls="sixmonth" aria-selected="false">Last 6 Months</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="year-tab" data-bs-toggle="tab" data-bs-target="#year" type="button" role="tab" aria-controls="year" aria-selected="false">One Year</button>
                </li>
            </ul>
           
            
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="fourweeks" role="tabpanel" aria-labelledby="fourweeks-tab">week 4</div>
                <div class="tab-pane fade" id="sixmonth" role="tabpanel" aria-labelledby="sixmonth-tab">6 months</div>
                <div class="tab-pane fade" id="year" role="tabpanel" aria-labelledby="year-tab">1 year homie</div>
            </div>
            
            <div class="row list-group-horizontal-wrap">
                @{
                    int counter = 1;
                }
                @foreach (var artist in ViewBag.Artists)
                {
                    <div class="col-md-3 col-sm-6 mb-3">
                        <a class="list-group-item text-center">
                            <img src="@artist.FirstImageUrl" alt="Spotify Profile Image" />
                            <div>@counter. @artist.Name <i class="fa-brands fa-spotify"></i></div>
                            @{
                                counter++;
                            }
                        </a>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>No artists found.</p>
    }

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/b8bac57295.js" crossorigin="anonymous"></script>

</body>
</html>
